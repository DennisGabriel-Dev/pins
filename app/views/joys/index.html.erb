<%= turbo_stream_from "joys" %>

<div style="height: 100vh; display: flex; flex-direction: column;">
  <!-- Header com título e form flutuante -->
  <%= render "joys/float_form" %>

  <!-- Container principal responsivo -->
  <div class="main-container">
    <!-- Mapa responsivo -->
    <div id="map" data-controller="map" data-map-joys-url-value="/joys.json" class="map-container">
      <button data-action="click->map#surprise" class="surprise-btn">
        🎲 Surpresa
      </button>
    </div>

    <!-- Lista lateral responsiva -->
    <div class="sidebar">
      <div class="sidebar-header">
        <h3 class="sidebar-title">📍 Localizações</h3>
      </div>
      
      <div id="locations_list" class="locations-list">
        <!-- Lista será preenchida via JavaScript -->
      </div>
    </div>
  </div>
</div>

<%= render "joys/internal_scripts" %>