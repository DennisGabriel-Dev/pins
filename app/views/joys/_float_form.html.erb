<div class="app-header">
  <div class="header-content">
    <h1 class="app-title">
      <%= image_tag "logo_2.png", width: 32, height: 32, alt: "Logo", class: "app-logo" %> 
      Pins
    </h1>
    
    <!-- Form de criação -->
    <div class="creation-form">
      <div class="form-group">
        <select id="joy_emoji" class="form-select emoji-select" aria-label="Selecionar emoji">
          <option value="☕️">☕️</option>
          <option value="😊">😊</option>
          <option value="🌇">🌇</option>
          <option value="🚌">🚌</option>
          <option value="🌊">🌊</option>
          <option value="✨">✨</option>
          <option value="🥥">🥥</option>
          <option value="🎶">🎶</option>
          <option value="🧀">🧀</option>
          <option value="🌅">🌅</option>
          <option value="🚗">🚗</option>
          <option value="🌧️">🌧️</option>
          <option value="🍖">🍖</option>
          <option value="🌳">🌳</option>
          <option value="📚">📚</option>
          <option value="🌬️">🌬️</option>
          <option value="🎺">🎺</option>
          <option value="🍰">🍰</option>
          <option value="👋">👋</option>
        </select>
      </div>
      
      <div class="form-group">
        <input type="text" id="joy_body" placeholder="Sua pequena alegria..." maxlength="140" class="form-input" aria-label="Descrição da alegria">
      </div>
      
      <button type="button" id="use_geo" class="btn btn-icon" aria-label="Usar minha localização" title="Usar minha localização">
        📍
      </button>
      
      <button type="button" id="create_joy" class="btn btn-primary">
        Pinsar
      </button>
    </div>
  </div>
  
  <!-- Filtros -->
  <div class="filters-section">
    <div class="filters-content">
      <div class="filter-group">
        <label for="filter_emoji" class="filter-label">Filtrar por emoji:</label>
        <select id="filter_emoji" class="filter-select">
          <option value="">Todos os emojis</option>
          <option value="☕️">☕️ Café</option>
          <option value="😊">😊 Sorriso</option>
          <option value="🌇">🌇 Pôr do sol</option>
          <option value="🚌">🚌 Transporte</option>
          <option value="🌊">🌊 Mar</option>
          <option value="✨">✨ Mágico</option>
          <option value="🥥">🥥 Coco</option>
          <option value="🎶">🎶 Música</option>
          <option value="🧀">🧀 Comida</option>
          <option value="🌅">🌅 Amanhecer</option>
          <option value="🚗">🚗 Trânsito</option>
          <option value="🌧️">🌧️ Chuva</option>
          <option value="🍖">🍖 Churrasco</option>
          <option value="🌳">🌳 Natureza</option>
          <option value="📚">📚 Livro</option>
          <option value="🌬️">🌬️ Brisa</option>
          <option value="🎺">🎺 Frevo</option>
          <option value="🍰">🍰 Bolo</option>
          <option value="👋">👋 Saudação</option>
        </select>
      </div>
      
      <div class="filter-group">
        <label for="filter_period" class="filter-label">Filtrar por período:</label>
        <select id="filter_period" class="filter-select">
          <option value="">Todos os períodos</option>
          <option value="today">Hoje</option>
          <option value="week">Última semana</option>
          <option value="month">Último mês</option>
        </select>
      </div>
      
      <button type="button" id="clear_filters" class="btn btn-secondary">
        Limpar filtros
      </button>
    </div>
  </div>
</div>